package helloworld;
 
import javafx.application.Application;
import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.layout.StackPane;
import javafx.stage.Stage;
 
public class HelloWorld extends Application {
    
    @Override
    public void start(Stage primaryStage) {
        Button btn1 = new Button();
        Button btn2 = new Button();
        btn1.setText("Continue?");
        btn2.setText("No Thanks.");
        btn1.setOnAction(new EventHandler<ActionEvent>() {
 
            @Override
            public void handle(ActionEvent continueEvent) {
                System.out.println("Thanks for Joining, Welcome.");
            }
        });
        btn2.setOnAction(new EventHandler<ActionEvent>() {
        	 
            @Override
            public void handle(ActionEvent NoWayEvent) {
                System.out.println("Youre a big chicken.");
            }
        });
        
        
        StackPane root = new StackPane();
        root.getChildren().add(btn1);
        root.getChildren().add(btn2);
        btn1.setAlignment(Pos.CENTER_LEFT);
        btn2.setAlignment(Pos.CENTER_RIGHT);

 Scene scene = new Scene(root, 600, 500);

        primaryStage.setTitle("Welcome to my integration Project!");
        primaryStage.setScene(scene);
        primaryStage.show();
    }
 public static void main(String[] args) {
        launch(args);
    }

}